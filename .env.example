# =========================
# Postgres Configuration
# =========================
POSTGRES_USER=postgres                 # PostgreSQL username used to authenticate to the database
POSTGRES_PASSWORD=password             # Password for the PostgreSQL user
POSTGRES_DB=yochat                     # Name of the PostgreSQL database

# =========================
# Backend Configuration
# =========================
NODE_ENV=development                   # Application environment (development, production, etc.)
DATABASE_URL="postgresql://postgres:password@postgres:5432/yochat?schema=public" # Full database connection string for Prisma/PostgreSQL
BACKEND_PORT=8000                      # Port number where the backend server runs
SESSION_SECRET=your-session-secret     # Secret key used to sign session cookies
EMAIL_VERIFICATION_EXPIRATION=120      # Email verification token expiration time (in seconds)
EMAIL_USER=your-smtp-email             # SMTP email address used to send emails
EMAIL_PASS=your-smtp-email-password    # SMTP email password for authentication
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name # Cloudinary cloud name for media storage
CLOUDINARY_API_KEY=your-cloudinary-api-key       # Cloudinary API key for authentication
CLOUDINARY_API_SECRET=your-cloudinary-api-secret # Cloudinary API secret for authentication
GOOGLE_CLIENT_ID=your-google-oauth-client-id     # Google OAuth client ID
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret # Google OAuth client secret
CLIENT_URL="http://localhost:5173"     # Frontend application URL

# =========================
# Frontend Configuration
# =========================
VITE_API_URL="http://localhost:8000"   # Backend API base URL used by the frontend
